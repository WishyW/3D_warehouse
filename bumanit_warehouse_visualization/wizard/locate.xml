        <record id="locate_wizard" model="ir.actions.act_window">
            <field name="name">Locate Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">locate.wizard</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_three_locate"/>
